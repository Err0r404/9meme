<section class="my-3">
    <small class="text-uppercase text-muted mb-0 font-weight-bold">Popularity</small>

    <div class="list-group list-group-flush">
        {# TODO: set current popularity to bold #}
        {% for popularity in listPopularities %}
            <a class="list-group-item list-group-item-action border-0 text-dark py-2 px-1 bg-transparent" href="#">
                <i class="{{ popularity.icon_class }}"></i>
                {{ popularity.title }}
            </a>
        {% endfor %}
    </div>
</section>