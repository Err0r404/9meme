{% set first = first|default(false) %}

{% set url_parameters = {'id': id } %}
{% if parent is not null %}
    {% set url_parameters = url_parameters|merge({'parentId': parent.id}) %}
{% endif %}

{% block fos_comment_comment_form_holder %}
    <div class="fos_comment_comment_form_holder">
        {% block fos_comment_form_title %}
            {% if first %}
                <p class="lead mb-1">{% trans from 'FOSCommentBundle' %}fos_comment_comment_new_headline_first{% endtrans %}</p>
            {% elseif parent is not null %}
                <p class="lead mb-1">{% trans with {"%name%": parent.authorName } from 'FOSCommentBundle' %}fos_comment_comment_reply_reply_to{% endtrans %}</p>
            {% else %}
                <p class="lead mb-1">{% trans from 'FOSCommentBundle' %}fos_comment_comment_new_headline{% endtrans %}</p>
            {% endif %}
        {% endblock %}

        {% block fos_comment_comment_new_form %}
            <form class="fos_comment_comment_new_form" action="{{ url('fos_comment_post_thread_comments', url_parameters) }}" data-parent="{{ parent.id|default() }}" method="POST">

                {% block fos_comment_form_fields %}
                    <div class="fos_comment_form_errors">
                        {{ form_errors(form) }}
                        {{ form_errors(form.body) }}
                    </div>
                    {{ form_widget(form.body, {'attr': {'class': 'form-control', 'rows': '3'}}) }}

                    {{ form_rest(form) }}
                {% endblock %}

                <div class="fos_comment_submit my-1 text-right">
                    {% block fos_comment_form_submit %}
                        {% if parent is not null %}
                            <button type="button" value="{% trans from 'FOSCommentBundle' %}fos_comment_comment_reply_cancel{% endtrans %}" class="fos_comment_comment_reply_cancel btn btn-danger">
                                {% trans from 'FOSCommentBundle' %}fos_comment_comment_reply_cancel{% endtrans %}
                            </button>
                        {% endif %}

                        <button type="submit" value="{% trans from 'FOSCommentBundle' %}fos_comment_comment_new_submit{% endtrans %}" class="btn btn-primary">
                            <i class='bx bx-paper-plane'></i>
                            {% trans from 'FOSCommentBundle' %}fos_comment_comment_new_submit{% endtrans %}
                        </button>
                    {% endblock %}
                </div>

            </form>
        {% endblock fos_comment_comment_new_form %}

    </div>
{% endblock fos_comment_comment_form_holder %}
