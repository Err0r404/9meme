<section class="my-3">
    <small class="text-uppercase text-muted mb-0 font-weight-bold">Categories</small>

    <div class="list-group list-group-flush">
        {# TODO: set current category to bold #}
        {% for category in categories %}
            <a class="list-group-item list-group-item-action border-0 text-dark py-2 px-1" href="#">
                <img src="{{ vich_uploader_asset(category, 'file') }}" alt="{{ category.title }} logo" width="16px" height="16px" style="margin-top: -5px;">
                {{ category.title }}
            </a>
        {% endfor %}
    </div>
</section>