{% trans_default_domain 'FOSUserBundle' %}

<section class="my-3">
    <p class="h3 mb-2 font-weight-normal">Login</p>

    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post" class="my-3">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <div class="form-group">
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>

        <div class="form-group">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>

        <div class="row">
            <div class="col">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>

            <div class="col text-right">
                <a href="{{ path('fos_user_resetting_request') }}" class="text-muted">
                    Forgot password?
                </a>
            </div>
        </div>

        <div class="row my-3">
            <div class="col text-right">
                <button class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
                    {{ 'security.login.submit'|trans }}
                </button>
            </div>
        </div>
    </form>

</section>
