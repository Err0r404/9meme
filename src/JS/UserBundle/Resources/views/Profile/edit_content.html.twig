{% trans_default_domain 'FOSUserBundle' %}

<section class="my-3">
    <p class="h3 mb-1 font-weight-normal">Account</p>

    <form action="{{ path('fos_user_profile_edit') }}" method="post">
        <div class="form-group">
            {{ form_label(form.username, 'form.username'|trans) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
            <div class="text-danger">
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, 'form.email'|trans) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
            <div class="text-danger">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.current_password, 'form.current_password'|trans) }}
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': ''}}) }}
            <div class="text-danger">
                {{ form_errors(form.current_password) }}
            </div>
        </div>

        {{ form_widget(form) }}
        <div class="text-right">
            <button class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}">
                {{ 'profile.edit.submit'|trans }}
            </button>
        </div>

    </form>

